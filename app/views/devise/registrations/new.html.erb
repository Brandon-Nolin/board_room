<div class="flex min-h-full flex-col justify-center pb-8 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <img class="mx-auto h-10 w-auto" src="/die.png" alt="Board Room dice logo">
    <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Create an account</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white px-6 py-12 shadow sm:rounded-lg sm:px-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>        
        <h3 class="!mt-0 text-lg font-semibold leading-9 tracking-tight text-gray-800">Account Information</h2>
        <div>
          <%= f.label :first_name, class:"block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %> 
            <% if resource.errors.has_key?(:first_name) %>
              <p class="text-red-500 text-sm mt-1"><%= resource.errors.full_messages_for(:first_name).join(', ') %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :last_name, class:"block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %> 
            <% if resource.errors.has_key?(:last_name) %>
              <p class="text-red-500 text-sm mt-1"><%= resource.errors.full_messages_for(:last_name).join(', ') %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :email, class:"block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %> 
            <% if resource.errors.has_key?(:email) %>
              <p class="text-red-500 text-sm mt-1"><%= resource.errors.full_messages_for(:email).join(', ') %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :password, class:"text-sm font-medium leading-6 text-gray-900" %>
          <% if @minimum_password_length %>
            <em class="text-sm font-medium leading-6 text-gray-900">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <div class="mt-2">
            <%= f.password_field :password, autocomplete: "new-password", class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            <% if resource.errors.has_key?(:password) %>
              <p class="text-red-500 text-sm mt-1"><%= resource.errors.full_messages_for(:password).join(', ') %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :password_confirmation, class:"block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %> 
            <% if resource.errors.has_key?(:password_confirmation) %>
              <p class="text-red-500 text-sm mt-1"><%= resource.errors.full_messages_for(:password_confirmation).join(', ') %></p>
            <% end %>
          </div>
        </div>
        

        <h3 class="mt-6 mb-3 text-lg font-semibold leading-9 tracking-tight text-gray-800">Address Information</h2>

        <div>
          <%= f.label :address, class:"block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.text_field :address, autofocus: true, class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %> 
            <% if resource.errors.has_key?(:address) %>
              <p class="text-red-500 text-sm mt-1"><%= resource.errors.full_messages_for(:address).join(', ') %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :city, class:"block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.text_field :city, autofocus: true, class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %> 
            <% if resource.errors.has_key?(:city) %>
              <p class="text-red-500 text-sm mt-1"><%= resource.errors.full_messages_for(:city).join(', ') %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :province, "Province", class:"block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.collection_select :province_id, Province.all, :id, :name, { prompt: "Select Province" }, { class: "block w-full rounded-md border-0 py-1.5 pr-14 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 appearance-none" } %>
            <% if resource.errors.has_key?(:province) %>
              <p class="text-red-500 text-sm mt-1"><%= resource.errors.full_messages_for(:province).join(', ') %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :postal_code, class:"block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.text_field :postal_code, autofocus: true, class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %> 
            <% if resource.errors.has_key?(:postal_code) %>
              <p class="text-red-500 text-sm mt-1"><%= resource.errors.full_messages_for(:postal_code).join(', ') %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.submit "Sign up", class:"flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"%>
        </div>
      <% end %>
    </div>

  </div>
</div>
<a href="<%= game_path(game)%>" class="group w-full max-w-sm mx-auto rounded-md shadow-md overflow-hidden">
    <div class="group-hover:opacity-75 flex items-end justify-end h-56 w-full bg-cover" style="background-image: url('<%= game.image.attached? ? url_for(game.image) : '' %>')"></div>
    <div class="px-5 py-3">
        <h3 class="text-gray-700 uppercase"><%= game.name%></h3>
        <% if game.sale_price%>
            <div class="flex items-end gap-4">
                <span class="text-gray-500 mt-2">$<%= game.sale_price%> </span>
                <span class="text-gray-500 mt-2!text-gray-500 font-light">Was: <span class="line-through">$<%= game.current_price%></span></span>
            </div>
        <% else %>
            <span class="text-gray-500 mt-2">$<%= game.current_price%> </span>
        <% end %>
    </div>
</a>
<a href="<%= game_path(game)%>" class="group !no-underline">
  <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-md bg-gray-200 lg:aspect-none group-hover:opacity-75 lg:h-80">
    <%= image_tag game.image, class: "h-full w-full object-cover object-center lg:h-full lg:w-full" if game.image.attached? %>
  </div>
  <div class="flex justify-between lg:inline">
    <h3 class="my-1 text-xl lg:text-sm text-gray-700"><%= game.name %></h3>
    <p class="my-1 text-xl lg:text-lg font-medium text-gray-900">$<%= game.current_price %></p>
  </div>
</a>